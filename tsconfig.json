{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,

        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitUseStrict": true,
        "alwaysStrict": false
    }
}
