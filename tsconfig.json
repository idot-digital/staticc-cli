{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,

        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitUseStrict": true,
        "alwaysStrict": false
    },
}
